<UserControl x:Class="DiskCleanup.UserControls.FolderPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:DiskCleanup.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="21.212" d:DesignWidth="192.121">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="tb_FolderName"  Text="InitialLeft" />
        <Button Grid.Column="1" Name="bt_PickRoot" Content="select" Click="bt_PickClick"/>
    </Grid>
</UserControl>
