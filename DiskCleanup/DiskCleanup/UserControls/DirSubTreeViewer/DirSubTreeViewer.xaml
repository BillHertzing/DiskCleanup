<UserControl x:Class="DiskCleanup.UserControls.DirSubTreeViewer.DirSubTreeViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:DiskCleanup.UserControls"
             xmlns:dstv="clr-namespace:DiskCleanup.UserControls.DirSubTreeViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:FolderPicker Grid.Row="0"/>
        <dstv:DirSubTreeTreeView Grid.Row="1"/>
    </Grid>
</UserControl>
